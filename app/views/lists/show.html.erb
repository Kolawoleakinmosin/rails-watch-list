<h1>My List</h1>

<h2><%= @list.name %></h2>
<div>
  <% @list.movies.each do |movie| %>
  <div class="d-flex">
     <h2><%= movie.title.capitalize %></h2>
  <p ><%= movie.rating %></p>
  <% bookmark = Bookmark.find_by(movie: movie, list: @list ) %>
  <%= link_to "Delete", bookmark_path(bookmark), class: "btn btn-primary",
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
  </div>

  <p><%= movie.overview %></p>

  <% end %>
</div>

<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary"%>
<%= link_to "Back to Lists", lists_path, class: "btn btn-primary" %>
